<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:padding="6dp">

    <ImageView
        android:id="@+id/imgSendImageMessage_dialog"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <EditText

        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:layout_below="@+id/imgSendImageMessage_dialog"
        android:id="@+id/edtCaption_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/koodak"
        android:hint="اینجا تایپ کنید..."
        android:textAlignment="textStart" />


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtCaption_dialog"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancelMessage_dialog"
            android:scaleType="centerCrop"
            android:layout_marginEnd="30dp"
            android:background="#D50000"
            android:src="@drawable/ic_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


        <ImageView
            android:id="@+id/img_confirmAndSendMessage_dialog"
            android:scaleType="centerCrop"
            android:layout_marginStart="30dp"
            android:background="#92E7F4"
            android:src="@drawable/ic_send_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"/>








    </LinearLayout>


</RelativeLayout>