<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/purple1">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="برای ایجاد فروشگاه شخصی خودتان به ما پیام دهید"
                android:textSize="25sp"
                android:fontFamily="@font/koodak"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koodak"
                android:layoutDirection="rtl"
                android:text="شماره تماس :"
                android:paddingRight="30dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txtMobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/edittextlogin"
                android:textAlignment="textEnd"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:hint="09123456789"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koodak"
                android:layoutDirection="rtl"
                android:text="متن پیام :"
                android:paddingRight="30dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="35dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F1F2F2">
                    <EditText
                        android:id="@+id/edMessage"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:gravity="start"
                        android:background="@drawable/edittextlogin"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/sendRequestBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btngetcode"
                android:text="ثبت درخواست"
                android:textColor="@color/white"
                android:fontFamily="@font/koodak"
                android:textSize="22sp"
                android:layout_marginRight="110dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:gravity="center"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>