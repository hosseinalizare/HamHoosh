<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_marginEnd="8dp"
            android:padding="2dp"
            android:layoutDirection="rtl"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_layout_profile_recycler_item_info_txtValue"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:fontFamily="@font/koodak"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:text="اسبید"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16sp"
                android:layout_gravity="end"
                android:id="@+id/txt_layout_profile_recycler_item_info_txtTitle"
                tools:text="نام فروشگاه"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_layout_profile_recycler_item_info_imgCopy"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="6dp"
                android:scaleType="centerInside"
                android:layout_gravity="start"
                android:src="@drawable/ic_copy_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="2dp"
                android:background="@color/DarkBlue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>