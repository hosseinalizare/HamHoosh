<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProduct"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/txt_layout_profile_recycler_item_order_txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="DPS - 1566879252" />

            <TextView
                android:id="@+id/txt_layout_profile_recycler_item_order_txtOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_layout_profile_recycler_item_order_txtOrderId"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:ellipsize="end"
                android:fontFamily="@font/koodak"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text=" نام خریدار : علی اقدسی" />

            <TextView
                android:id="@+id/txt_layout_profile_recycler_item_order_txtOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/koodak"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text=" نام خریدار : علی اقدسی" />


            <ImageView
                android:id="@+id/img_layout_profile_recycler_item_order_imgOrder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_layout_profile_recycler_item_order_txtOrderDate"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:id="@+id/rel_layout_profile_recycler_item_order_rel_seeMore"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_arrow_blue_right" />

                <TextView
                    android:id="@+id/see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:layout_toStartOf="@+id/arrow"
                    android:fontFamily="@font/koodak"
                    android:text="مشاهده"
                    android:textColor="@color/LightBlue"
                    android:textSize="25sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_layout_profile_recycler_item_order_txtSumPriceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_layout_profile_recycler_item_order_imgOrder"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/koodak"
                android:text="جمع فاکتور : 22500 تومان"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>