<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:id="@+id/cardViewProduct"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_layout_profile_recycler_item_order_txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                tools:text="DPS - 1566879252"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/txt_layout_profile_recycler_item_order_txtOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_below="@id/txt_layout_profile_recycler_item_order_txtOrderId"
                tools:text=" نام خریدار : علی اقدسی"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/koodak"/>
            <TextView
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/txt_layout_profile_recycler_item_order_txtOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_alignParentTop="true"
                tools:text=" نام خریدار : علی اقدسی"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/koodak"/>




            <ImageView
                android:layout_below="@+id/txt_layout_profile_recycler_item_order_txtOrderDate"
                android:id="@+id/img_layout_profile_recycler_item_order_imgOrder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                tools:src="@mipmap/rec_asbid_icon"/>

            <RelativeLayout
                android:id="@+id/rel_layout_profile_recycler_item_order_rel_seeMore"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_arrow_blue_right" />

                <TextView
                    android:id="@+id/see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:layout_toStartOf="@+id/arrow"
                    android:fontFamily="@font/koodak"
                    android:text="مشاهده"
                    android:textColor="@color/LightBlue"
                    android:textSize="25sp"/>
            </RelativeLayout>

            <TextView
                android:layout_below="@+id/img_layout_profile_recycler_item_order_imgOrder"
                android:id="@+id/txt_layout_profile_recycler_item_order_txtSumPriceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="22dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/koodak"
                android:text="جمع فاکتور : 22500 تومان" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>