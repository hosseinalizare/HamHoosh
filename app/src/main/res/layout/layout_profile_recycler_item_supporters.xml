<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layoutDirection="rtl"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginEnd="8dp"
                android:id="@+id/txt_layout_profile_recycler_item_supporters_txtPosition"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:fontFamily="@font/koodak"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:text="اسبید"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:padding="4dp"
                android:visibility="visible"
                android:id="@+id/img_layout_profile_recycler_item_supporters_imgSendMessage"
                android:layout_marginBottom="4dp"
                app:fabSize="mini"
                android:layout_marginStart="16dp"
                android:scaleType="centerInside"
                android:layout_gravity="start"
                android:backgroundTint="@color/DarkYellow"
                android:src="@drawable/ic_message_blue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:layout_marginTop="2dp"
                android:background="@color/DarkBlue"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>