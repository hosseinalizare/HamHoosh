<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:fontFamily="@font/koodak"
        android:layout_marginTop="20dp"
        android:id="@+id/txtTitleDialog"
        android:text="تعیین سمت کارمند"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <AutoCompleteTextView
        android:layout_below="@+id/txtTitleDialog"
        android:id="@+id/atSetPosition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@color/backgroundGray"
        android:fontFamily="@font/koodak"
        android:hint="سمت مربوطه را مشخص کنید"
        android:nextFocusDown="@id/cityEd"
        android:paddingStart="6dp" />

    <RadioGroup
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/atSetPosition"
        android:id="@+id/radios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="right"
        android:inputType="text"
        android:orientation="vertical" >

        <RadioButton
            android:fontFamily="@font/koodak"
            android:id="@+id/fullAccess"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="دسترسی کامل"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="right"/>

        <RadioButton
            android:fontFamily="@font/koodak"
            android:id="@+id/admin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="ادمین"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="right"/>

        <RadioButton
            android:checked="true"
            android:fontFamily="@font/koodak"
            android:id="@+id/operator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="اپراتور"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="right" />
    </RadioGroup>

    <TextView
        android:fontFamily="@font/koodak"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="26dp"
        android:layout_below="@+id/radios"
        android:layout_alignParentLeft="true"
        android:text="تایید"
        android:textColor="@color/green800"
        android:textSize="20sp"
        android:id="@+id/txtConfirmPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>

