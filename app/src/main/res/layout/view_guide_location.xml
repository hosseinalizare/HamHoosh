<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:fontFamily="@font/koodak"
        android:id="@+id/tv_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingRight="8dp"
        android:text="آدرس نهایی شما با علامت "
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_baseline_room_24"
        app:layout_constraintRight_toLeftOf="@+id/tv_msg1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/koodak"
        android:id="@+id/tv_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=" مشخص میشه."
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/iv_room"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/koodak"
        android:id="@+id/tv_msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingRight="12dp"
        android:text="با زدن روی قسمت دلخواه نقشه، آدرس نهایی شما به اون نقطه تغییر پیدا میکنه"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg1" />

    <TextView
        android:fontFamily="@font/koodak"
        android:id="@+id/tv_msg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingRight="8dp"
        android:text="با زدن دکمه   "
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg3" />

    <ImageView
        android:id="@+id/iv_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_baseline_gps_fixed_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_msg4"
        app:layout_constraintRight_toLeftOf="@+id/tv_msg4"
        app:layout_constraintTop_toBottomOf="@id/tv_msg3" />

    <TextView
        android:fontFamily="@font/koodak"
        android:id="@+id/tv_msg5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingRight="8dp"
        android:text="آدرس نهایی شما به موقعیت فعلی شما تغییر پیدا میکنه."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg4" />
</androidx.constraintlayout.widget.ConstraintLayout>